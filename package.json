{
  "name": "koishi-workspace",
  "private": true,
  "workspaces": [
    "atri",
    "shiki",
    "shiki/core",
    "shiki/cosmos",
    "shiki/games",
    "packages/*"
  ],
  "scripts": {
    "atri": "yarn workspace atri",
    "build": "tsc -b",
    "bump": "ts-node build/bump",
    "dep": "ts-node build/dep",
    "docs": "cd docs & yarn dev",
    "test": "mocha --experimental-vm-modules --enable-source-maps",
    "test:json": "c8 -r json mocha --experimental-vm-modules --enable-source-maps",
    "test:lcov": "rimraf coverage & c8 -r lcov mocha --experimental-vm-modules --enable-source-maps",
    "test:text": "c8 -r text mocha --experimental-vm-modules --enable-source-maps",
    "lint": "eslint packages/*/src/**/*.ts --fix --cache",
    "pub": "ts-node build/publish",
    "shiki": "yarn workspace bot-shiki"
  },
  "version": "1.0.0",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@octokit/rest": "^18.0.3",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/semver": "^7.3.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "c8": "^7.3.0",
    "cac": "^6.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-spawn": "^7.0.3",
    "del": "^5.1.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "jest-mock": "^26.3.0",
    "kleur": "^4.1.1",
    "latest-version": "^5.1.0",
    "mocha": "^8.1.1",
    "open": "^7.1.0",
    "ora": "^5.0.0",
    "p-map": "^4.0.0",
    "prompts": "^2.3.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  }
}
